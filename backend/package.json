{
  "name": "kanaliiga-apex-backend",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --ext .ts,.js src/",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:createdb": "cross-env TYPEORM_DATABASE=generate_migration_kanaliiga_apex ts-node src/tools/create-migration-db.ts",
    "migration:dropdb": "cross-env TYPEORM_DATABASE=generate_migration_kanaliiga_apex ts-node src/tools/drop-migration-db.ts",
    "premigration:generate": "cross-env TYPEORM_DATABASE=generate_migration_kanaliiga_apex npm run typeorm -- -d ./ormconfig.datasource.ts migration:run",
    "migration:generate": "cross-env TYPEORM_DATABASE=generate_migration_kanaliiga_apex npm run typeorm -- -d ./ormconfig.datasource.ts migration:generate",
    "genba": "node ./node_modules/bcryptjs/bin/bcrypt",
    "db:seed": "ts-node -T -r tsconfig-paths/register src/tools/seed-database.ts",
    "db:clear:match": "ts-node -T -r tsconfig-paths/register src/tools/clear-database-match.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.16",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/passport-http": "^0.3.9",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^33.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "pg-god": "^1.0.12",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}